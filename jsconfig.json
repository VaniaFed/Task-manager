{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES2015",
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"paths": {
			"@js/*": ["./scr/js/*"],
			"@scss/*": ["./scr/scss/*"],
			"@blocks/*": ["./src/blocks/*"],
			"@utilities/*": ["./src/utilities/*"]
		}
	},
	"exclude": ["node_modules", "**/node_modules/*", ".stylelintrc"]
}
